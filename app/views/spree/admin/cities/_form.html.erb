<div data-hook="admin_city_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :ibge_code, class: ['form-group'] do %>
      <%= f.label :ibge_code, Spree.t(:ibge_code) %>
      <%= f.text_field :ibge_code, type: :number, class: 'form-control' %>
    <% end %>
  </div>
</div>
